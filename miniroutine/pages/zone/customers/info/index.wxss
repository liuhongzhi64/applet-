/* pages/zone/customers/info/index.wxss */
page {
  background: #f0f0f0;
}
.erys-tab__lg-box {
  width: 2250rpx;
  overflow: hidden;
  transition: all  .25s  ease-in;
}
.erys-footer__items {
  width: 750rpx;
  height: 160rpx;
}
.erys-button__footer {
  color: white;
}
.erys-tab__item-box {
  width: 750rpx;
  height: 100%;
}
.erys-home-button__loading {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.erys-home-button__loading>image {
  width: 20px;
  height: 20px;
}
.animation {
  animation: ratateLoading 1s linear infinite;
  -webkit-animation: ratateLoading 1s linear infinite;
}
@keyframes ratateLoading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
@-webkit-keyframes ratateLoading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
.back-color {
  background-color: white !important;
}