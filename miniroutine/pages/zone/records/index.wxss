/* pages/zone/record/record.wxss */
@import "../../history/index.wxss";
page {
  background: #FFFFFF;
}
.check-box-container {
  padding: 30rpx 36rpx;
  background: #FFFFFF;
  margin-top: 20rpx;
}
.check-box-inner {
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-single-box {
  padding: 22rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(230,230,230,1);
  box-shadow:0px 4px 4px 0px rgba(114,114,114,0.08);
  border-radius:4px;
}
.item-inner-box {
  width: 156rpx;
  height: 80rpx;
  text-align: center;
}
.selected-font {
  color: #3A6AFC;
}
.front-title {
  font-size: 24rpx;
  font-weight:  500;
}
.footer-text {
  font-size: 30rpx;
  font-weight: bold;
}
.item-header {
  /* display: flex;
  flex-direction: row;
  justify-content: flex-start; */
  align-items: center;
  margin-bottom: 10rpx;
}
.item-header>image {
  width: 24rpx;
  height: 24rpx;
}
.item-hover-style {
  background: #E6E6E6;
}
.main-content {
  margin-top: 20rpx;
  background: #FFFFFF;
}
.content-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 500;
  color: #606266;
  height: 88rpx;
  border-bottom: 1px solid #F5F7FA;
}
.header-text {
  display: flex;
  justify-content: center;
  align-items: center;
}
.header-inner-box {
  display: -webkit-inline-box;
  display: inline-flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  border-bottom: 4rpx solid #FFFFFF;
}
.header-selected {
  border-bottom: 4rpx solid #3A6AFC;
}
.content-card-list {
  margin-bottom: 66rpx;
}
.more {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #3A6AFC;
  text-decoration: underline;
  margin-top: 20rpx;
}