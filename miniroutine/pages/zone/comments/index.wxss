.erys-footer__items {
  width: 100%;
  height: 160rpx;
}
.erys-button__footer {
  background: #3a5cfa;
  color: white;
}
.erys-home-button__loading {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.erys-home-button__loading>image {
  width: 20px;
  height: 20px;
}
.animation {
  animation: ratateLoading 1s linear infinite;
  -webkit-animation: ratateLoading 1s linear infinite;
}
@keyframes ratateLoading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
@-webkit-keyframes ratateLoading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
.__text-title {
  height: 96rpx;
  width: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}