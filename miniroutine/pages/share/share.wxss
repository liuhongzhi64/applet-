/* pages/share/share.wxss */
.erys-share__rotate-box {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* animation: shareRorate 1s linear initial; */
}
.erys-share__qr-img-box {
  width: 600rpx;
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.erys-share__qr-image {
  width: 500rpx;
  height: 500rpx;
  position: relative;
}
.erys-share__text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}
