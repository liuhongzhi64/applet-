.__position-avatar {
  position: absolute;
  width: 500rpx;
  height: 500rpx;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.__position-avatar>image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
}