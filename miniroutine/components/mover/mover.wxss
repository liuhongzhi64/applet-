/* components/tips/mover.wxss */
.move-drap-wrap {
  pointer-events: none;
  z-index: 100; 
  position: fixed;
}
.move-drap-group-view {
  display: inline-block; 
  pointer-events: auto; 
  position: absolute;
}
.drap-items {
  width: 60px; 
  height: 60px;
}
.item-img {
  width: 100%; 
  height: 100%; 
  border-radius: 30px;
}
.drap-items-btn {
  width: 50px; 
  height: 22px; 
  border: 1px solid rgba(75, 120, 246, 1); 
  color:rgba(75, 120, 246, 1); 
  border-radius: 26px; 
  font-size: 12px; 
  text-align: center; 
  box-shadow: 0px 0px 1px 1px rgba(170, 170, 170, 0.59); 
  position: absolute; 
  top: 50px;
  left: 3.5px; 
  display: inline-flex; 
  justify-content: center; 
  align-items: center;
  background: #FFF
}
.drap-items-msg {
  width: 16px; 
  height: 16px; 
  display: inline-flex; 
  justify-content: center; 
  align-items: center; 
  background: rgba(255,  64, 71,  1); 
  text-align: center;
  font-size: 10px;
  position: absolute; 
  top: 0; 
  left: 50px; 
  border-radius: 15px; 
  color: white; 
  font-weight: 500;
  letter-spacing: 1rpx;
}