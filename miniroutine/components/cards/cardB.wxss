/* components/cards/cardB.wxss */
@import "../../app.wxss";
.erys-card-b__container {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.erys-card-b__container>image {
  width: 622rpx;
  height: 622rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}
.erys-card-b__border {
  width: 622rpx;
  height: auto;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background: #393939;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}